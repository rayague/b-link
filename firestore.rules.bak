rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Original backup of rules before applying test rule.
    //
    // Profiles collection: only owner may read/write their profile
    match /profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId
        && request.resource.data.keys().hasAll(['name','birthDate'])
        && request.resource.data.size() < 8192; // limit doc size (~8KB)
    }

    // Deny all other accesses by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
